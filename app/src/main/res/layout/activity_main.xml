<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    tools:context="com.example.mycalculator.MainActivity"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textAlignment="viewEnd"
        android:textSize="60sp"
        android:id="@+id/text_view_result"/>


    <TableRow
        android:layout_height="match_parent"
        android:layout_width="match_parent">

    <Button
        android:textSize="20sp"
        android:id="@+id/button1"
        android:layout_weight="1"
        android:text="1"/>

    <Button
        android:textSize="20sp"
        android:id="@+id/button2"
        android:layout_weight="1"
        android:text="2"/>

    <Button android:textSize="20sp" android:id="@+id/button3" android:layout_weight="1" android:text="3"/>

    <Button android:textSize="20sp" android:id="@+id/buttonAdd" android:layout_weight="1" android:text="+"/>

</TableRow>


    -<TableRow android:layout_height="match_parent" android:layout_width="match_parent">

    <Button android:textSize="20sp" android:id="@+id/button4" android:layout_weight="1" android:text="4"/>

    <Button android:textSize="20sp" android:id="@+id/button5" android:layout_weight="1" android:text="5"/>

    <Button android:textSize="20sp" android:id="@+id/button6" android:layout_weight="1" android:text="6"/>

    <Button android:textSize="20sp" android:id="@+id/buttonSub" android:layout_weight="1" android:text="-"/>

</TableRow>


    <TableRow
        android:layout_height="match_parent"
        android:layout_width="match_parent">

    <Button
        android:textSize="20sp"
        android:id="@+id/button7"
        android:layout_weight="1"
        android:text="7"/>

    <Button
        android:textSize="20sp"
        android:id="@+id/button8"
        android:layout_weight="1"
        android:text="8"/>

    <Button
        android:textSize="20sp"
        android:id="@+id/button9"
        android:layout_weight="1"
        android:text="9"/>

    <Button
        android:textSize="20sp"
        android:id="@+id/buttonMul"
        android:layout_weight="1"
        android:text="*"/>

</TableRow>


    -<TableRow android:layout_height="match_parent" android:layout_width="match_parent">

    <Button
        android:textSize="20sp"
        android:id="@+id/buttonClear"
        android:layout_weight="1"
        android:text="CLEAR"/>

    <Button
        android:textSize="20sp"
        android:id="@+id/button0"
        android:layout_weight="1"
        android:text="0"/>

    <Button
        android:textSize="20sp"
        android:id="@+id/buttonEqual"
        android:layout_weight="1"
        android:text="="/>

    <Button
        android:textSize="20sp"
        android:id="@+id/buttonDiv"
        android:layout_weight="1"
        android:text="/"/>

</TableRow>

</TableLayout>